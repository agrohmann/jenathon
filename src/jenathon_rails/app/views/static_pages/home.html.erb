<h1>Events in Jena</h1>

<div class="btn-group" data-toggle="buttons" role="group" aria-label="Latest event date selector">
  <label class="btn btn-primary active">
    <input type="radio" name="options" id="max_date_today" autocomplete="off" checked>Today
  </label>
  <label class="btn btn-primary">
    <input type="radio" name="options" id="max_date_tomorrow" autocomplete="off">Tomorrow
  </label>
  <label class="btn btn-primary">
    <input type="radio" name="options" id="max_date_next_week" autocomplete="off">Next Week
  </label>
</div>

<div style='width: 1200px;'>
  <div id="map2" style='width: 1200px; height: 600px;'></div>
</div>

<div style='width: 1200px;'>
  <div id="map" style='width: 1200px; height: 600px;'></div>
</div>

<script type="text/javascript">
$(".btn-group label").click(function () {
    $($(this).id).button('toggle');
});
</script>

<script type="text/javascript">
  var handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){

    // TODO:
    var markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>

